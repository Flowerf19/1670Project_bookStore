@{
    ViewData["Title"] = "ListCart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $(".updateCart").click(function (event) {
            event.preventDefault();
            var quantity = $(".quantity_" + $(this).attr("data-id")).val();
            console.log(quantity);
            $.ajax({
                type: "POST",
                url: "@Url.Action("updateCart","Cart")",
                data: {
                    id: $(this).attr("data-id"),
                    quantity: quantity
                },
                success: function (result) {
                    window.location.href = '@Url.Action("ListCart","Cart")';
                }
            });
        });
    });
</script>
<div class="list-cart">
    <table class="cart" border="1">
        <tr>
            <th>STT</th>
            <th>Name</th>
            <th>Image</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total Price</th>
        </tr>

        @{
            int STT = 0;
            decimal sum = 0;
            foreach (var item in ViewBag.carts)
            {
                string txt_class = "quantity_" + item.Book.Id;
                STT++;

                decimal total = item.Book.Price * item.Quantity;
                sum += total;
                <tr>
                    <td>@STT</td>
                    <td>@item.Book.Title</td>
                    <td><img src="@item.Book.ImageUrl"/></td>
                    <td><input type="number" class="@txt_class" value="@item.Quantity" /></td>
                    <td>@item.Book.Price</td>
                    <td align="center">@total</td>
                </tr>
                <a href="" data-id="@item.Book.Id" class="updateCart btn btn-sec">Update</a>
                <a class="btn btn-danger" asp-controller="Cart" asp-action="deleteCart" asp-route-id="@item.Book.Id">Delete</a>
            }
        }

    </table>
</div>