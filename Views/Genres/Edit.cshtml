@model _1670Project.Models.Genre

@{
    ViewData["Title"] = "Edit";
}
        <form asp-action="Edit" class="w-40">
            <h4>Edit Genre</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="input-container">
                 <label asp-for="Type" class="w-40"></label>
                 <input asp-for="Type" class="input" />
                 <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-danger">Back</a>
                <input type="submit" value="Save" class="btn btn-sec" />
            </div>
        </form>
